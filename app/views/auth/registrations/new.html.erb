<h2>注册</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= hidden_field_tag :introducer_token, @introducer_token%>

<div class="form-group">
  <%= f.label :tel, "手机号" %><br />
  <%= f.telephone_field :tel, autofocus: true, class: "form-control", required: true %>
</div>

<div class="form-group">
  <label>图形验证码</label>
  <%= show_simple_captcha %>
</div>
<div class="form-group">
  <%= label_tag :tel_captcha, "手机验证码" %><br />
  <div>
    <div class="input-group">
      <%= text_field_tag :tel_captcha, nil, class: "form-control", maxlength: 6, minlength: 6, required: true %>
      <input type="hidden" id="check_tel" value="true">
      <span class="input-group-btn">
        <button id="wizard" class="btn btn-default" type="button" style="height: auto;" onclick="auth.castCaptcha()">获取验证码</button>
      </span>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :name, "用户名" %><br />
  <%= f.text_field :name, class: "form-control", maxlength:12, minlength:1, required: true %>
</div>

<div class="form-group">
  <%= f.label :password, "密码" %>
  <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true %>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, "确认密码" %><br />
  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true %>
</div>

<div class="actions">
  <%= f.submit "确定", class: "btn btn-primary btn-block" %>
</div>
<% end %>

<%= render "auth/shared/links" %>
