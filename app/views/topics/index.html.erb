<div class="row">
  <ul class="list">
    <% @topics.each do |topic| %>
      <li>
        <%=link_to topic_path(topic) do%>
          <h3><%=topic.title%></h3>
          <div class="info">
            <span>创建于<%=display_datetime topic.created_at%></span>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
<div class="row">
  <div class="list-footer">
    <%= paginate_info @topics %>
    <%= will_paginate @topics, class: "apple_pagination" %>
  </div>
</div>
